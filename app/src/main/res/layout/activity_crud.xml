<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CRUD">

    <Button
            android:text="Simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="268dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/button" android:layout_alignParentStart="true"
            android:layout_marginStart="23dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="286dp" android:onClick="btnSimpan"/>
    <Button
            android:text="UPDATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button" android:id="@+id/button2" android:onClick="btnUpdate"
            android:layout_toStartOf="@+id/button3" android:layout_marginEnd="33dp"/>
    <Button
            android:text="HAPUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_marginEnd="27dp"
            android:layout_alignTop="@+id/button" android:id="@+id/button3" android:onClick="btnHapus"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="47dp"
            android:id="@+id/editText" android:layout_marginTop="39dp" android:hint="id "
            android:layout_toEndOf="@+id/textView" android:layout_marginStart="34dp"/>
    <TextView
            android:text="ID"
            android:layout_width="65dp"
            android:layout_height="33dp" android:layout_alignParentTop="true" android:id="@+id/textView"
            android:layout_marginTop="48dp" android:layout_alignParentStart="true" android:layout_marginStart="23dp"/>
    <TextView
            android:text="Nama"
            android:layout_width="72dp"
            android:layout_height="36dp" android:id="@+id/textView2"
            android:layout_marginTop="19dp" android:layout_marginStart="20dp" android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_above="@+id/button" android:layout_marginBottom="41dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignTop="@+id/textView2" android:id="@+id/editText2"
            android:layout_alignStart="@+id/editText" android:hint="Name"/>
</RelativeLayout>