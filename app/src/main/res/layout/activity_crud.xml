<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CRUD">

    <Button
            android:text="Simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="268dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/button" android:layout_alignParentStart="true"
            android:layout_marginStart="24dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="207dp" android:onClick="btnSimpan"/>
    <Button
            android:text="UPDATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/button" android:id="@+id/button2" android:onClick="btnUpdate"/>
    <Button
            android:text="HAPUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_marginEnd="27dp"
            android:layout_alignTop="@+id/button" android:id="@+id/button3" android:onClick="btnHapus"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="47dp"
            android:id="@+id/editText" android:layout_marginTop="40dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_alignEnd="@+id/editText" android:id="@+id/editText2"
            android:layout_marginTop="113dp"/>
    <TextView
            android:text="ID"
            android:layout_width="65dp"
            android:layout_height="33dp" android:layout_alignParentTop="true" android:id="@+id/textView"
            android:layout_marginTop="48dp" android:layout_alignStart="@+id/button"/>
    <TextView
            android:text="Nama"
            android:layout_width="65dp"
            android:layout_height="33dp" android:layout_alignParentTop="true" android:id="@+id/textView2"
            android:layout_marginTop="118dp" android:layout_alignStart="@+id/button" android:layout_marginStart="2dp"/>
    <Button
            android:text="VIEW"
            android:layout_width="344dp"
            android:layout_height="wrap_content" android:layout_alignEnd="@+id/button"
            android:layout_alignParentBottom="true" android:id="@+id/button4" android:layout_marginBottom="122dp"
            android:layout_marginEnd="-256dp" android:onClick="btnView"/>
</RelativeLayout>